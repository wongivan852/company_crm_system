# Testing Environment Configuration for Multi-Device Access
# This file should be used for local network testing only

# Debug settings for testing
DEBUG=True

# Network Access Configuration
# Add your MacBook's IP addresses and other device IPs that need access
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.0.164,10.5.0.2,0.0.0.0,*

# Database settings (keep using local database for testing)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Security settings (relaxed for testing)
SECRET_KEY=testing-secret-key-change-for-production-123456789
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS settings for cross-device API access
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True

# Cache settings (use simple cache for testing)
REDIS_URL=redis://localhost:6379/0

# Email settings (use console backend for testing)
