# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Security Settings (Production)
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=crm_db
DB_USER=crm_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@learninginstitute.com

# Redis/Celery Configuration
REDIS_URL=redis://localhost:6379/0

# Communication Services
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

WECHAT_CORP_ID=your-corp-id
WECHAT_CORP_SECRET=your-corp-secret
WECHAT_AGENT_ID=your-agent-id

# Learning Institute Information
INSTITUTE_NAME=Learning Institute
INSTITUTE_EMAIL=info@learninginstitute.com
INSTITUTE_PHONE=+1234567890

# UAT Testing Configuration (disable in production)
ENABLE_PUBLIC_UAT_VIEWS=False
UAT_ACCESS_TOKEN=generate-secure-uat-token